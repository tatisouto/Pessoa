@model IEnumerable<Projeto.Agenda.MVC.ViewModel.PessoaViewModel>

@{
    ViewBag.Title = "Pessoas cadastradas";
}

<h2>@ViewBag.Title</h2>
<br />
<p>
    @Html.ActionLink("Adicionar", "Create", "Pessoa", new { @class = "btn btn-info" })
   
</p>


<br />
<table class="table table-responsive">
    <tr>
        <th>Nome</th>
        <th>CPF</th>
        <th>Email</th>
        <th>Data Nascimento</th>
        <th>Data Criação </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cpf)
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DtNascimento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DtCreate)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new
                {
                    id = item.Id
                }) |
                @Html.ActionLink("Visualizar", "Details", new
                {
                    id = item.Id
                }) |
                @Html.ActionLink("Excluir", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<script src="~/Scripts/inputmask/inputmask.min.js"></script>